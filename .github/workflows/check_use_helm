name: Deploy
on: ['deployment']

jobs:
  deployment:
    runs-on: 'ubuntu-latest'
    steps:
    - uses: actions/checkout@v1
    - name: helm directory
      run: cd helm/opendistro-es/
    - name: 'Deploy'
      uses: 'deliverybot/helm@v1'
      with:
        release: 'credit'
        namespace: 'test'
        chart: 'app'
        token: '${{ github.token }}'
        values: |
          name: credit
      env:
        KUBECONFIG_FILE: '${{ secrets.KUBECONFIG }}'
